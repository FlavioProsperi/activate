<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>activate-crud-vaadin-example</display-name>
	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	<servlet>
		<servlet-name>activate-crud-vaadin-example</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>activate-crud-vaadin-example-start</description>
			<param-name>application</param-name>
			<param-value>net.fwbrasil.activate.crud.vaadin.example.Main</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>activate-crud-vaadin-example</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
